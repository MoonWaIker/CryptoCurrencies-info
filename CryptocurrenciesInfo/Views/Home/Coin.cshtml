@using CryptocurrenciesInfo.Models.Cryptocurrencies;
@model CoinFull

@{
    ViewData["Title"] = "Coin";
}

<div>
    <input type="button" href="javascript:void(0);" onclick="history.go(-1);" value="Return" class="btn btn-primary"/>
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Current price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentPrice) $
        </dd>
        <dt class = "col-sm-2">
            Price changing in percentage for 24h
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceChangePercentage24h) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volume)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volume) $
        </dd>
    </dl>
</div>

<div class="accordion" id="accordion">
    <h1>@(Model.Markets.Length > 0 ? "Markets" : string.Empty)</h1>
    @foreach (var collapse in Model.Markets
    .GroupBy(market => market.Name)
    .OrderBy(market => market
    .Average(item => item.Price))
    .ThenBy(market => market
    .Average(obj =>
    {
       if (obj.Trust == "green")
           return 0;
       if (obj.Trust == "yellow")
           return 1;
       if (obj.Trust == "red")
           return 3;
       return 2;
    })))
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapse.Key.Replace(" ", "")">
                    <img src="@collapse.First().Logo" alt="marketLogo" />
                    <a>
                        @collapse.Key
                    </a>
                </button>
            </h2>
            <div id="@collapse.Key.Replace(" ", "")" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion">
                <table class="table accordion-body">
                    <caption>Table of markets</caption>
                    <tr>
                        <th>Base</th>
                        <th>Target</th>
                        <th>Price</th>
                        <th>Trust status</th>
                        <th></th>
                    </tr>
                    @foreach (var market in collapse)
                    {
                        <tr>
                            <td>@market.Base</td>
                            <td>@market.Target</td>
                            <td>@market.Price $</td>
                            <td>@market.Trust</td>
                            <td>
                                <ul class="page-item @(string.IsNullOrEmpty(market.Link) ? "disabled" : string.Empty)">
                                    <a class="page-link" href=@market.Link>
                                        @(!string.IsNullOrEmpty(market.Link) ? "Buy now" : "Link isn't available")
                                    </a>
                                <ul>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }
</div>

@using Cryptocurrencies_info.Models.Cryptocurrencies;
@model CoinFull

@{
    ViewData["Title"] = "Coin";
}

<div>
    <input type="button" href="javascript:void(0);" onclick="history.go(-1);" value="Return" class="btn btn-primary"/>
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Current price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentPrice) $
        </dd>
        <dt class = "col-sm-2">
            Price changing in percentage for 24h
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceChangePercentage24h) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volume)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volume) $
        </dd>
    </dl>
</div>

<div>
    @foreach (var collapse in Model.Markets
    .GroupBy(market => market.Name)
    .OrderBy(market => market
    .Average(item => item.Price))
    .OrderBy(market => market
    .Average(obj =>
    {
       if (obj.Trust == "green")
           return 0;
       if (obj.Trust == "yellow")
           return 1;
       if (obj.Trust == "red")
           return 3;
       return 2;
    })))
    {
        <img src="@collapse.First().Logo" alt="marketLogo" />
        <details>
            <summary>
                @collapse.Key
            </summary>
            <table class="table">
                <caption>Table of markets</caption>
                <tr>
                    <th>Market</th>
                    <th>Base</th>
                    <th>Target</th>
                    <th>Price</th>
                    <th>Trust status</th>
                </tr>
                @foreach (var market in collapse)
                {
                    <tr>
                        <td>
                            <a @(!string.IsNullOrEmpty(market.Link) ? $"href={market.Link}" : string.Empty)>
                                @market.Name
                            </a>
                        </td>
                        <td>@market.Base</td>
                        <td>@market.Target</td>
                        <td>@market.Price $</td>
                        <td>@market.Trust</td>
                    </tr>
                }
            </table>
        </details>
    }
</div>
